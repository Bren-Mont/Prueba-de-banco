import React from "react";

function Input({attribute, handleChange, param }){
    return(
        <div>
            <input 
            placeholder={attribute.placeholder}
            id={attribute.id}
            name={attribute.name}
            type={attribute.type}
            onChange={(e) => handleChange(e.target.name, e.target.value)}
            className='regular-style'
            ></input>
        </div>
    )
};

export default Input;

